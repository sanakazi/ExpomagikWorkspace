<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen_bg" >

    <!-- Header Starts here -->

    <RelativeLayout
        android:id="@+id/rllogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ic_drP"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/titlebar_menu_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profile"
            android:textColor="@color/White"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/ic_editProfile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_edit" />
    </RelativeLayout>

    <!-- Header Ends here -->


    <!-- Main Screen Starts here -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dividerLogin"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/dp_border" >

            <com.conceptcandy.expomagik.util.RoundedImageView
                android:id="@+id/imgPdp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />
            
             <ImageView
                android:id="@+id/imgupdatePdp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_edit" />
        </FrameLayout>

        <TextView
            android:id="@+id/proName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="@color/pink_text_color"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/proDesignation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="Designation, Company"
            android:textColor="@color/White"
            android:textSize="13dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/proPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="2dp"
            android:text="City, Country"
            android:textColor="@color/White"
            android:textSize="11dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_connect" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_chat" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Screen Ends here -->

</RelativeLayout>